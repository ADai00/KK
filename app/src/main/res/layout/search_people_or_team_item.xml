<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tintgray">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">
        <ImageView android:layout_width="32dp"
                   android:layout_height="32dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/icon_people_gray"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="@string/find_people"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        <TextView
                android:id="@+id/search_people_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

        <ImageView android:layout_width="32dp"
                   android:layout_height="32dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/icon_group_gray"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="@string/find_group_chat"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        <TextView
                android:id="@+id/search_group_chat_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>